extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/token/verify")
            #error
                if error
                    p.text-danger Error!!!

            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Input 4 digits Token

            //-input token
            label( for="inputToken" class="sr-only") Token
            input(type="token" name="token" id="token" class="form-control" placeholder="4 Digit Token" required autofocus)
            
            //-input email
            label( for="inputEmail" class="sr-only") Email address
            input(type="email" name="user" id="user" class="form-control" placeholder="Email address" required autofocus)


            //-signIn button
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Submit

            - var pClasses=['mt-5', 'mb-3', 'text-muted'];
            p(class=pClasses) &copy; bayusantiko 2020